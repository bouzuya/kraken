{
  "name": "@bouzuya/kraken",
  "description": "A blog data generator for blog.bouzuya.net.",
  "version": "3.7.7",
  "author": {
    "name": "bouzuya",
    "email": "m@bouzuya.net",
    "url": "http://bouzuya.net"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 6
          }
        }
      ],
      "power-assert"
    ]
  },
  "bin": {
    "kraken": "./bin/kraken"
  },
  "bugs": {
    "url": "https://github.com/bouzuya/kraken/issues"
  },
  "dependencies": {
    "commander-b": "1.0.0",
    "finalhandler": "^1.1.1",
    "fs-extra": "^7.0.1",
    "jekyll-markdown-parser": "^2.0.0",
    "kuromoji": "^0.1.2",
    "marked": "^0.6.2",
    "serve-static": "^1.13.2",
    "time-keeper": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@types/finalhandler": "^1.1.0",
    "@types/fs-extra": "^5.0.5",
    "@types/marked": "^0.6.5",
    "@types/node": "^11.13.4",
    "@types/power-assert": "^1.5.0",
    "@types/proxyquire": "^1.3.27",
    "@types/serve-static": "^1.13.2",
    "@types/sinon": "^7.0.11",
    "babel-preset-power-assert": "^3.0.0",
    "beater": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "proxyquire": "^2.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.1",
    "typescript": "^3.4.3",
    "watch": "^1.0.2"
  },
  "directories": {
    "doc": "doc"
  },
  "files": [
    "bin",
    "lib"
  ],
  "homepage": "https://github.com/bouzuya/kraken",
  "keywords": [],
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/bouzuya/kraken.git"
  },
  "scripts": {
    "build": "npm-run-all -s build:es2015 build:es5 build:lib",
    "build:es2015": "tsc",
    "build:es5": "babel --out-dir .tmp/es5/ --source-maps inline .tmp/es2015/",
    "build:lib": "babel --copy-files --no-comments --out-dir ./lib/ .tmp/es2015/src/",
    "clean": "rimraf .tmp lib",
    "prepare": "npm-run-all -s \"clean\" \"build\"",
    "test": "node .tmp/es5/test/index",
    "watch": "npm-run-all -p \"watch:*\"",
    "watch:es2015": "npm run \"build:es2015\" -- --watch",
    "watch:es5": "npm run \"build:es5\" -- --watch",
    "watch:lib": "npm run \"build:lib\" -- --watch",
    "watch:test": "watch --wait 2 \"npm test\" \".tmp/es5/\""
  }
}
